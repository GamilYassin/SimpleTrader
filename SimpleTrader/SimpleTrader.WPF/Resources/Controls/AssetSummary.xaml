<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="SimpleTrader.WPF.Resources.Controls.AssetSummary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:SimpleTrader.WPF.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleTrader.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                FontSize="18"
                Grid.Row="0"
                Text="Cash" />

            <TextBlock
                FontSize="48"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Text="{Binding AccountBalance, StringFormat={}{0:c}, FallbackValue=$0.00}"
                VerticalAlignment="Center" />
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                FontSize="18"
                Grid.Row="0"
                Text="Top Assets" />

            <controls:AssetListing
                DataContext="{Binding AssetListingViewModel}"
                FontSize="14"
                Grid.Row="1"
                Margin="0,10,0,0" />
        </Grid>
    </Grid>
</UserControl>

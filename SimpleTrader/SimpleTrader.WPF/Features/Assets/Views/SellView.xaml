<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="SimpleTrader.WPF.Features.Assets.Views.SellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:SimpleTrader.WPF.Resources.Controls"
    xmlns:controls1="clr-namespace:SimpleTrader.WPF.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ComboBox
            Grid.Row="0"
            ItemsSource="{Binding AssetListingViewModel.Assets}"
            SelectedItem="{Binding SelectedAsset}"
            SelectionChanged="cbAssets_SelectionChanged"
            Width="300"
            x:Name="cbAssets">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Symbol}" />
                        <Border
                            BorderBrush="Black"
                            BorderThickness="1,0,0,0"
                            Margin="10,0" />
                        <TextBlock Text="{Binding Shares}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock
            DataContext="{Binding ErrorMessageViewModel}"
            Foreground="DarkRed"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            Text="{Binding Message}"
            Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <TextBlock
            DataContext="{Binding StatusMessageViewModel}"
            Foreground="DarkGreen"
            Grid.Row="2"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            Text="{Binding Message}"
            Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <controls1:SearchSymbolResultPanel Grid.Row="3" Margin="0,20,0,0">
            <StackPanel HorizontalAlignment="Center">
                <WrapPanel Margin="0,10">
                    <TextBlock Text="Shares to sell:" Width="150" />
                    <TextBox Text="{Binding SharesToSell, UpdateSourceTrigger=PropertyChanged}" Width="50" />
                </WrapPanel>
                <WrapPanel Margin="0,10">
                    <TextBlock Text="Price per share:" Width="150" />
                    <TextBlock Text="{Binding StockPrice, StringFormat={}{0:C}}" Width="50" />
                </WrapPanel>
                <TextBlock
                    FontSize="32"
                    HorizontalAlignment="Center"
                    Margin="0,10"
                    Text="{Binding TotalPrice, StringFormat={}{0:C}}" />
                <Button
                    Command="{Binding SellStockCommand}"
                    Content="Sell"
                    FontSize="24"
                    Margin="0,10"
                    Padding="20,5" />
            </StackPanel>
        </controls1:SearchSymbolResultPanel>
    </Grid>
</UserControl>

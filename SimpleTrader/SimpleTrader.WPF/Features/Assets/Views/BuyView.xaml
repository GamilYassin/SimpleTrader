<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="SimpleTrader.WPF.Features.Assets.Views.BuyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:SimpleTrader.WPF.Resources.Controls"
    xmlns:controls1="clr-namespace:SimpleTrader.WPF.Resources.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBox Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}" Width="100" />
            <Button
                Command="{Binding SearchSymbolCommand}"
                Content="Search"
                Margin="5,0,0,0" />
        </WrapPanel>

        <TextBlock
            DataContext="{Binding ErrorMessageViewModel}"
            Foreground="DarkRed"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            Text="{Binding Message}"
            Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <TextBlock
            DataContext="{Binding StatusMessageViewModel}"
            Foreground="DarkGreen"
            Grid.Row="2"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            Text="{Binding Message}"
            Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <controls1:SearchSymbolResultPanel Grid.Row="3" Margin="0,20,0,0">
            <StackPanel HorizontalAlignment="Center">
                <WrapPanel Margin="0,10">
                    <TextBlock Text="Shares to buy:" Width="150" />
                    <TextBox Text="{Binding SharesToBuy, UpdateSourceTrigger=PropertyChanged}" Width="50" />
                </WrapPanel>
                <WrapPanel Margin="0,10">
                    <TextBlock Text="Price per share:" Width="150" />
                    <TextBlock Text="{Binding StockPrice, StringFormat={}{0:C}}" Width="50" />
                </WrapPanel>
                <TextBlock
                    FontSize="32"
                    HorizontalAlignment="Center"
                    Margin="0,10"
                    Text="{Binding TotalPrice, StringFormat={}{0:C}}" />
                <Button
                    Command="{Binding BuyStockCommand}"
                    Content="Buy"
                    FontSize="24"
                    Margin="0,10"
                    Padding="20,5" />
            </StackPanel>
        </controls1:SearchSymbolResultPanel>
    </Grid>
</UserControl>
